{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "test astutil",
            "type": "shell",
            "command": "zig test pkgs/astutil/src/main.zig",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build runner",
            "type": "shell",
            "command": [
                "zig",
                "run",
                "install/build_runner.zig",
                "--pkg-begin",
                "@build@",
                "build.zig",
                "--pkg-end",
                "--",
                "zig.exe",
                ".",
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}